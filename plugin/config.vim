if !has('nvim')
  set encoding=utf-8
  set nocompatible
endif

if has('mouse')
  set mouse=a
endif

set path+=**
set clipboard=unnamed

set cursorline

set nowritebackup
set noswapfile
set hidden

set hlsearch
set ignorecase
set smartcase
set incsearch

set autoindent
set smartindent

set foldlevelstart=99
